<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="SelectManagingPersonViewModel"
            type="com.silvertak.relationshipsmanager.viewmodel.SelectManagingPersonViewModel" />
        <variable
            name="SelectManagingPersonActivity"
            type="com.silvertak.relationshipsmanager.view.SelectManagingPersonActivity" />
    </data>
    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SelectManagingPersonActivity"
        android:background="@color/transparentBlack"
        android:onClick="@{SelectManagingPersonActivity.onClick}">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:background="@drawable/card_navy_background">
            <TextView
                android:id="@+id/selectGuideTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락주기를 관리할 사람을 선택하세요."
                android:textSize="15dp"
                android:textColor="@color/fontColor"
                android:gravity="center_vertical"
                android:layout_margin="20dp"/>
            <com.silvertak.relationshipsmanager.customView.SearchEditTextView
                android:id="@+id/searchEditTextView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:paddingLeft="20dp"
                android:layout_below="@+id/selectGuideTv"
                android:hint="이름으로 검색"
                android:background="@drawable/card_white_background"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectablePersonList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/searchEditTextView"
                android:layout_above="@+id/contactTermSpinner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                bind:observablePersonItemList="@{SelectManagingPersonViewModel.observablePersonRelationshpInfos}"
                bind:observableSelectPersonItemList="@{SelectManagingPersonViewModel.observableSelectedPersonRelationshpInfos}"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/contactTermSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@id/btnLayout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/card_white_background"/>
            <LinearLayout
                android:id="@+id/btnLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.silvertak.relationshipsmanager.customView.TouchChangeBackgroundColorTextView
                    android:id="@+id/cancelBtn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    app:normalBackgroundResource="@drawable/group_modify_cancel_background"
                    app:clickedBackgroundResource="@drawable/group_modify_cancel_clicked_background"
                    android:text="취소"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:onClick="@{SelectManagingPersonActivity::onClick}"/>
                <com.silvertak.relationshipsmanager.customView.TouchChangeBackgroundColorTextView
                    android:id="@+id/confirmBtn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    app:normalBackgroundResource="@drawable/group_modify_confirm_background"
                    app:clickedBackgroundResource="@drawable/group_modify_confirm_clicked_background"
                    android:text="저장"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:onClick="@{SelectManagingPersonActivity::onClick}"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>
