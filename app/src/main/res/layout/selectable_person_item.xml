<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="PersonRelationshipInfo"
            type="com.silvertak.relationshipsmanager.vo.PersonRelationshipInfo" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:contact="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/tools"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:id="@+id/backgroundLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/fontColor"
            bind:backgroundType="@{PersonRelationshipInfo.selected}">
            <LinearLayout
                android:id="@+id/profileIvLayout"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/profileIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    contact:photo="@{PersonRelationshipInfo.contactInfo.photoBitmap}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/profileIvLayout"
                android:weightSum="10"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textColor="@color/background"
                    android:text="@{PersonRelationshipInfo.contactInfo.name}"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/phoneNumberTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textColor="@color/background"
                    android:text="@{PersonRelationshipInfo.contactInfo.phoneNumber}"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</layout>
